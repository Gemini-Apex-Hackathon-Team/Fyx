{
  "manifest_version": 3,
  "name": "FYX - Focus & Attention Assistant",
  "version": "1.0.0",
  "description": "AI-powered attention management that works with your brain, not against it",
  "permissions": [
    "storage",
    "tabs",
    "activeTab",
    "scripting",
    "alarms",
    "webNavigation",
    "offscreen"
  ],
  "host_permissions": [
    "<all_urls>"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "icons/icon16.png",
      "48": "icons/icon48.png",
      "128": "icons/icon128.png"
    }
  },
  "content_scripts": [
    {
      "matches": [
        "<all_urls>"
      ],
      "js": [
        "content.js",
        "camera-tracker.js",
        "enhanced-content.js",
        "gemini-ui.js",
        "content-analyzer.js"
      ],
      "css": [
        "content.css"
      ]
    }
  ],
  "web_accessible_resources": [
    {
      "resources": [
        "overlay.html",
        "break-screen.html",
        "wake-tab.html",
        "offscreen.html",
        "offscreen.js",
        "quiz.html",
        "content-analyzer.js",
        "dashboard.html",
        "mediapipe/*",
        "mediapipe/wasm/*"
      ],
      "matches": [
        "<all_urls>"
      ]
    }
  ],
  "content_security_policy": {
    "extension_pages": "script-src 'self' 'wasm-unsafe-eval'; object-src 'self'"
  },
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  }
}
